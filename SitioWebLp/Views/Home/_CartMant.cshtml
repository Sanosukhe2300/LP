@model List<SitioWebLp.Models.ListCartModel>

<a class="dropdown-item dropdown-toggle" href=#">
    <i class="fas fa-user mr-1"></i> Cart (@ViewBag.Cantidad) - $@ViewBag.PrecioTotal
</a>
<ul class="dropdown-menu">
    <li>
        <div class="dropdown-mega-content">
            <table class="cart">
                <tbody>

                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="product-thumbnail">
                                    <a href="shop-product-sidebar.html">
                                        <img width="100" height="100" alt="" class="img-fluid" src="@item.foto">
                                    </a>
                                </td>
                                <td class="product-name">
                                    <a href="shop-product-sidebar.html">@item.nombre<br><span class="amount"><strong>@item.cant x $@item.precio</strong></span></a>
                                </td>
                                <td class="product-actions">
                                    <a title="Remove this item" class="remove" href="#">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    }
                 
                    <tr>
                        <td class="actions" colspan="6">
                            <div class="actions-continue">
                                @*<button type="submit" class="btn btn-light">View All</button>*@
                                <button type="submit" class="btn float-right btn-primary">Proceed to Checkout <i class="fas fa-angle-right ml-1"></i></button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </li>
</ul>
